{
  "manifest_version": 2,

  "name": "CalculoCompras",
  "description": "Calculadora para compras 'puerta a puerta' (www.calculocompras.com)",
  "version": "0.0.0.1",

  "browser_action": {
    "default_icon": "images/extension-icon16.png",
    "default_popup": "index.html"
  },
  "icons": { 
    "16": "images/extension-icon16.png",
    "48": "images/extension-icon48.png",
    "128": "images/extension-icon128.png" },
  "permissions": [
    "storage",
    "https://*.google.com/"
  ],
  "content_security_policy": "script-src 'self' https://use.fontawesome.com https://www.google-analytics.com https://ampcid.google.com https://www.google.com; object-src 'self'"
}